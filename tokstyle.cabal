name:                tokstyle
version:             0.1.0
synopsis:            TokTok style checker
homepage:            https://toktok.github.io/tokstyle
license:             AGPL-3
license-file:        LICENSE
author:              iphydf
maintainer:          iphydf@users.noreply.github.com
category:            Development
build-type:          Simple
cabal-version:       >=1.10

executable tokstyle
  main-is:             Main.hs
  other-modules:
      Checks.Naming
    , Result
  ghc-options:
      -Wall
  build-depends:
      base >= 4 && < 5
    , deepseq
    , filepath
    , language-c
  hs-source-dirs:      src
  default-language:    Haskell2010
